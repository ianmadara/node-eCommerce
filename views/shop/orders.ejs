<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length > 0) { %>
                <ul class="order__list">
                    <% orders.forEach(order => { %>
                        <li class="order__item">
                            <h1><%= order.id %></h1>
                            <h2><%= order.products.length %> x Product(s)</h2>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
            <h1>Nothing there!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>